<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
    <h4>Quantity: <%= quantity %></h4>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
<!--  -->
  <aside class="price">
    <%= humanized_money_with_symbol (product.price * quantity) %>
  </aside>
</article>